        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Miscellaneous Master Data</h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Home", "Dashboard")</li>
                                <li class="breadcrumb-item active" aria-current="page">Miscellaneous Master Data</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader  -->
        <!-- ============================================================== -->
        <div class="form-row">
            <div class="col-5 m-r-15">
                <div class="form-group ">
                    @{ Html.RenderPartial("_MasterDataGrid", Model.ViewModel.Where(x => x.ControllerName.Equals("Relationship")).First()); }
                </div>
            </div>
            <div class="col-5">
                <div class="form-group">
                    @{ Html.RenderPartial("_MasterDataGrid", Model.ViewModel.Where(x => x.ControllerName.Equals("Occupation")).First()); }
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col-5 m-r-15">
                <div class="form-group">
                    @{ Html.RenderPartial("_MasterDataGrid", Model.ViewModel.Where(x => x.ControllerName.Equals("Religion")).First()); }
                </div>
            </div>
            <div class=" col-5">
                <div class="form-group">
                    @{ Html.RenderPartial("_MasterDataGrid", Model.ViewModel.Where(x => x.ControllerName.Equals("Caste")).First()); }
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class=" col-5 m-r-15">
                <div class="form-group">
                    @{ Html.RenderPartial("_MasterDataGrid", Model.ViewModel.Where(x => x.ControllerName.Equals("Category")).First()); }
                </div>
            </div>
        </div>
    </div>

    <div id="modal-container" class="modal fade"
         tabindex="-1" role="dialog">
        <div class="modal-content">
        </div>
    </div>


<!-- ============================================================== -->
<!-- end wrapper  -->
<!-- ============================================================== -->


