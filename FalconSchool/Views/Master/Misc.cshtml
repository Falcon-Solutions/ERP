@using System.Data
@using System.Linq
@using Falcon.Entity.Master

@model Falcon.Entity.Master.MiscConfigurationViewModel

@{
    ViewBag.Title = "Misc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/Content/vendor/bootstrap-select/css/bootstrap-select.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/datatables/css/dataTables.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/datatables/css/buttons.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/datatables/css/select.bootstrap4.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/datatables/css/fixedHeader.bootstrap4.css">
    <style>
        input[type="search"] {
            -webkit-appearance: textfield;
        }

        .col-sm-12.col-md-6 {
            padding-left: 0px !important;
        }

        .dropdown.bootstrap-select {
            width: 65px !important;
        }

        .txt-cntr-spc {
            text-align: center;
            vertical-align: middle;
            word-spacing: 10px;
        }

        .modal-content {
            width: 600px !important;
            margin: 30px auto !important;
        }

    </style>
}
<!-- ============================================================== -->
<!-- wrapper  -->
<!-- ============================================================== -->

    <div class="container-fluid dashboard-content ">
