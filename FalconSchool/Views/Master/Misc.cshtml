    <script>


        $(document).ready(function () {
            $('table').DataTable({
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]]
            });

            $('select').selectpicker(function () {
                $(this).addClass("selectpicker select-width");
                $(this).selectpicker("refresh");
            });

            $('a[data-original-title=Create]').click(function () {
                $(input)
            });
        });

        
    </script>
}
