

<div class="form-row">
    <div class="form-group col">
        <label class="col-form-label">Address</label>
        <textarea id="txt-Area-Details" class="form-control" rows="3"></textarea>
    </div>
</div>

<div class="form-row">
    <div class="form-group col">
        @Html.Label("Country")
        <div>
            @Html.DropDownList("Dropdown_Country", new SelectList(ViewBag.CountryMaster, "Text", "Value"), new { @class = "form-control selectpicker", @data_size = "5", @data_flip = "false", @data_display = "static" })
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-group col">
        @Html.Label("State")
        <div>
            @Html.DropDownList("Dropdown_State", new SelectList(ViewBag.StateMaster, "Text", "Value"), new { @class = "form-control selectpicker", @data_size = "5", @data_flip = "false", @data_display = "static" })
        </div>
    </div>
</div>

<div class="form-row">
    <div class="form-group col">
        @Html.Label("City")
        <div>
            @Html.DropDownList("Dropdown_City", new SelectList(ViewBag.CityMaster, "Text", "Value"), new { @class = "form-control selectpicker", @data_size = "5", @data_flip = "false", @data_display = "static" })
        </div>
    </div>

</div>
<div class="form-row">
    <div class="form-group col">
        <label class="col-form-label">Pincode</label>
        @Html.TextBox("TxtBox_Pincode", null, new { @class = "form-control", @type= "number" })
    </div>
</div>