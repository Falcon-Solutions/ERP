<div class="mb-sm-3 form-group">
    <div class="form-row col">
        <div class="pl-0 span col-5">
            <div class="pl-0 col">
                <div class="span">
                    <label class="col-form-label">Pincode</label>
                    <div class="input-group mb-3">
                        <input id="txt-pincode" type="text" class="form-control">
                        <input id="hidden-pincode-Id" type="hidden" class="form-control">
                        <div class="input-group-append">
                            <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                <i class="fas fa-search"></i>
                            </a>
                            @*<button class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"></button>*@
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" style="display: none;" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Select Your Locality</h5>
                                    <a href="#" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">×</span>
                                    </a>
                                </div>
                                <div class="modal-body">
                                </div>
                                <div class="modal-footer">
                                    <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
                                    <a href="#" class="btn btn-primary">Save changes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span">
                    <label for="inputAddress">Address</label>
                    <textarea type="text" class="form-control" placeholder="House No / Building / Society / Street / Landmark"></textarea>
                </div>
            </div>
        </div>
        <div class="pl-0 span col-7">
            <div class="form-row">
                <label class="col-form-label">Area Details</label>
            </div>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">Locality </h5>:
                <p class="d-inline">Gondhale Nagar</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">City </h5>:
                <p class="d-inline">Pune</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">Tehsil </h5>:
                <p class="d-inline">Pune</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">District </h5>:
                <p class="d-inline">Pune</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">State </h5>:
                <p class="d-inline">MAHARASHTRA</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">Country </h5>:
                <p class="d-inline">INDIA</p>
            </span>

            <span class="mb-sm-1 badge badge-light">
                <h5 class="d-inline">Pincode </h5>:
                <p class="d-inline">411028</p>
            </span>
        </div>
    </div>

</div>
